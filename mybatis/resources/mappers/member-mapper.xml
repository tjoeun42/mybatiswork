<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="memberMapper">
	<resultMap type="Member" id="mResultSet">
		<result column="user_id" property="userId"/>
		<result column="user_pwd" property="userPwd"/>
		<result column="user_name" property="userName"/>
		<result column="email" property="email"/>
		<result column="birthday" property="birthday"/>
		<result column="gender" property="gender"/>
		<result column="phone" property="phone"/>
		<result column="address" property="address"/>
		<result column="enroll_date" property="enrollDate"/>
		<result column="modify_date" property="modifyDate"/>
		<result column="status" property="status"/>
	</resultMap>
  <select id="checkId" resultType="_int">
    select count(*) from member where user_id = #{userId}
  </select>
  <insert id="insertMember" parameterType="Member">
  	insert into member 
  	values(#{userId}, #{userPwd},#{userName},#{email},#{birthday},#{gender},#{phone},#{address},default,default,default)
  </insert>
  <select id="loginMember" resultMap="mResultSet" parameterType="Member">
  	select *
  	  from member
  	 where user_id=#{userId} and user_pwd=#{userPwd} and status='Y' 
  </select>
</mapper>




